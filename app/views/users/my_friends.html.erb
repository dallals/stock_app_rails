<%= render 'friends/lookup'%>

<div id="container">
<%if @friendships.size > 0 %>
<% else %>
<div class='row col-lg-12'>
	<p class="lead">You don't have any friends yet. Please add some!</p>
</div>
<% end %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th colspan="3" class="page-header">
					<h2>My Friends</h2>
				</th>
			</tr>
			<tr>		
				<th>email</th>
				<th>Actions</th>			
			</tr>		
		</thead>
		<tbody>
			<% @friendships.each do |friend|%>
			<tr>
				<td><%= friend.email %></td>	
				<td>
				<%= link_to "View Profile", user_path(friend), class:" btn-xs btn-primary btn active" %>
				<%= link_to "Unfriend", friendship_path(friend),
									:method => :delete, :data => { :confirm => "Are you sure?" }, 
									:class => "btn btn-xs btn-danger btn active"%>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>	
</div>							


		