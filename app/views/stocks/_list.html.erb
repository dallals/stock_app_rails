
<div>
<table class="search-results-table col-md-12 table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Symbol</th>
			<th>Current Price</th>
			<% if @user.id == current_user.id %>
			<th>Actions</th>
			<% end %>
		</tr>		
	</thead>
	<tbody>
		
		<% @user_stocks.each do | user_stock |%>
		<tr>
			<td><%= link_to user_stock.name, stock_path(user_stock) %></td>
			<td><%= user_stock.ticker %></td>
			<td><%= user_stock.price %></td>
			<% if @user.id == current_user.id %>
			<td>
			<%= link_to "Show Chart", stock_path(user_stock), :class => "btn btn-xs btn-primary btn active" %>
			<%= link_to "delete", user_stock_path(user_stock),
								:method => :delete, :data => { :confirm => "Are you sure you want to delete #{user_stock.name}" }, 
								:class => "btn btn-xs btn-danger btn active"%>
			</td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>	
</div>



